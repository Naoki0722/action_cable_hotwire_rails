<h2 class="text-2xl">DM一覧ページ</h2>
<div class="my-8">
  <% @rooms.each do |room| %>
    <%= link_to "ユーザー名：#{room.recipient_for(current_user).name}とのやりとり #{room.id}", room_path(room),
    class: 'hover:underline hover:text-blue-500' %>
  <% end %>
</div>
<%= link_to 'トップページへ', root_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
