<h2 class="text-2xl">新規DMルーム作成</h2>
<% if @room.errors.any? %>
  <div class="error-summary bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded my-4" role="alert">
    <strong class="font-bold">エラーが発生しました:</strong>
    <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="my-8">
  <%= form_with model: @room do |f| %>
    <%= f.select :recipient, recipient_list(current_user) %>
    <%= f.submit '作成する', class: 'mt-4 block bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
  <% end %>
</div>
<%= link_to 'ルーム一覧へ', rooms_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
